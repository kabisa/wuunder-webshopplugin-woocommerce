<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Wuunder_WuunderConnector>
            <version>1.0.1</version>
        </Wuunder_WuunderConnector>
    </modules>
    <global>
        <blocks>
            <wuunderconnector>
                <class>Wuunder_WuunderConnector_Block</class>
            </wuunderconnector>
        </blocks>
        <helpers>
            <wuunderconnector>
                <class>Wuunder_WuunderConnector_Helper</class>
            </wuunderconnector>
        </helpers>
        <models>
            <wuunderconnector>
                <class>Wuunder_WuunderConnector_Model</class>
                <resourceModel>wuunderconnector_mysql4</resourceModel>
            </wuunderconnector>
            <wuunderconnector_mysql4>
                <class>Wuunder_WuunderConnector_Model_Mysql4</class>
                <entities>
                    <shipments>
                        <table>wuunder_shipments</table>
                    </shipments>
                </entities>
            </wuunderconnector_mysql4>
        </models>
        <events>
            <sales_order_grid_collection_load_before>
                <observers>
                    <wuunderconnector>
                        <model>wuunderconnector/observer</model>
                        <method>salesOrderGridCollectionLoadBefore</method>
                    </wuunderconnector>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
        <resources>
            <wuunderconnector_setup>
                <setup>
                    <module>Wuunder_WuunderConnector</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </wuunderconnector_setup>
            <wuunderconnector_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </wuunderconnector_write>
            <wuunderconnector_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </wuunderconnector_read>
        </resources>
    </global>
    <frontend>
        <routers>
            <wuunderconnector>
                <use>standard</use>
                <args>
                    <module>Wuunder_WuunderConnector</module>
                    <frontName>wuunderconnector</frontName>
                </args>
            </wuunderconnector>
        </routers>
        <translate>
            <modules>
                <wuunderconnector>
                    <files>
                        <default>Wuunder_WuunderConnector.csv</default>
                    </files>
                </wuunderconnector>
            </modules>
        </translate>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <wuunder_wuunderconnector before="Mage_Adminhtml">Wuunder_WuunderConnector_Adminhtml</wuunder_wuunderconnector>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <wuunderconnector>
                    <file>wuunder/wuunderconnector.xml</file>
                </wuunderconnector>
            </updates>
        </layout>
        <translate>
            <modules>
                <wuunderconnector>
                    <files>
                        <default>Wuunder_WuunderConnector.csv</default>
                    </files>
                </wuunderconnector>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <wuunderconnector>
            <connect>
                <testmode>1</testmode>
                <country>NL</country>
                <loggingenabled>0</loggingenabled>
            </connect>
            <magentoconfig>
            </magentoconfig>
        </wuunderconnector>
    </default>

</config>